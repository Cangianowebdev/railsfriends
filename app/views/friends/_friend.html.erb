<% if friend.user == current_user %>

  <span class="col-2">
    <strong>First name:</strong>
    <%= friend.first_name %>
  </span>

  <span class="col-2">
    <strong>Last name:</strong>
    <%= friend.last_name %>
  </span>

  <span class="col-3">
    <strong>Email:</strong>
    <%= friend.email %>
  </span>

  <span class="col-2">
    <strong>Phone:</strong>
    <%= friend.phone %>
  </span>

  <span class="col-2">
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </span>
  <span class="col-1">
    <strong>User ID:</strong>
    <%= friend.user_id %>
  </span>


<% end %>